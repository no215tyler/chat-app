<%# チャットヘッダー画面 %>
<div class="chat-header">
  <div class="chat_name">
    <%= @room.name %>
  </div>
  <%= link_to "チャットを終了する", room_path(@room), data: { turbo_method: :delete } %>
</div>

<%# メッセージ画面 %>
<div class="messages">
  <%= render partial: "message", collection: @messages %>
</div>

<%# フォーム投稿画面 %>
<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form_input">
    <%= f.text_field :content, class: 'input_area', placeholder: 'type a message' %>
    <label class="form_image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'submit_form' %>
<% end %>