<%# サイドバーヘッダー %>
<div class="side-bar-header">
  <%= link_to current_user.name, edit_user_path(current_user), class: "user_name" %>
  <%= link_to "チャットを作成する", new_room_path, class: "new_chat_link" %>
</div>

<%# ルーム画面 %>
<div class="rooms">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <%= link_to room.name, room_messages_path(room), class: "room_name" %>
    </div>
  <% end %>
</div>